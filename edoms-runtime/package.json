{
  "name": "edoms-runtime",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "npm run build:libs && vite --config dev.vite.config.ts",
    "edoms:entry": "edoms entry",
    "build": "npm run build:libs && npm run build:page && npm run build:playground",
    "build:production": "npm run build:libs:production && npm run build:page:production && npm run build:playground:production",
    "build:page": "vite build --mode page",
    "build:playground": "vite build --mode playground",
    "build:page:production": "vite build --mode page:production",
    "build:playground:production": "vite build --mode playground:production",
    "build:libs": "edoms entry && npm run build:config && npm run build:value && npm run build:event",
    "build:libs:production": "edoms entry && npm run build:config:production && npm run build:value:production && npm run build:event:production",
    "build:config": "vite build --mode config",
    "build:value": "vite build --mode value",
    "build:event": "vite build --mode event",
    "build:config:production": "vite build --mode config:production",
    "build:value:production": "vite build --mode value:production",
    "build:event:production": "vite build --mode event:production"
  },
  "dependencies": {
    "@edoms/cli": "workspace:^0.0.1",
    "@edoms/core": "workspace:^0.0.1",
    "@edoms/schema": "workspace:^0.0.1",
    "@edoms/stage": "workspace:^0.0.1",
    "@edoms/ui": "workspace:^0.0.1",
    "@edoms/utils": "workspace:^0.0.1",
    "@vitejs/plugin-legacy": "^2.2.0",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "terser": "^5.14.2",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@types/node": "^15.12.4",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/test-utils": "^2.0.0",
    "recast": "^0.20.4",
    "rollup": "^2.25.0",
    "rollup-plugin-external-globals": "^0.6.1",
    "sass": "^1.35.1",
    "typescript": "^4.3.4",
    "vite": "^3.1.3",
    "vue-tsc": "^1.0.8"
  }
}
