{
  "name": "edoms-runtime",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "npm run build:libs && vite --config dev.vite.config.ts",
    "build": "npm run build:libs && npm run build:page && npm run build:playground",
    "build:admin": "npm run build:libs:admin && npm run build:playground:admin",
    "build:page": "vite --config build.vite.config.ts build --mode page",
    "build:playground": "vite --config build.vite.config.ts build --mode playground",
    "build:page:admin": "vite --config build.vite.config.ts build --mode page:admin",
    "build:page:offline": "vite --config build.vite.config.ts build --mode page:offline",
    "build:playground:admin": "vite --config build.vite.config.ts build --mode playground:admin",
    "build:libs": "edoms entry && npm run build:config && npm run build:value && npm run build:event",
    "build:libs:admin": "edoms entry && npm run build:config:admin && npm run build:value:admin && npm run build:event:admin",
    "build:config": "vite --config build.vite.config.ts build --mode config",
    "build:value": "vite --config build.vite.config.ts build --mode value",
    "build:event": "vite --config build.vite.config.ts build --mode event",
    "build:config:admin": "vite --config build.vite.config.ts build --mode config:admin",
    "build:value:admin": "vite --config build.vite.config.ts build --mode value:admin",
    "build:event:admin": "vite --config build.vite.config.ts build --mode event:admin"
  },
  "dependencies": {
    "@edoms/charts": "workspace:^0.0.1",
    "@edoms/cli": "workspace:^0.0.1",
    "@edoms/core": "workspace:^0.0.1",
    "@edoms/design": "workspace:^0.0.1",
    "@edoms/element-plus-adapter": "workspace:^0.0.1",
    "@edoms/schema": "workspace:^0.0.1",
    "@edoms/stage": "workspace:^0.0.1",
    "@edoms/ui": "workspace:^0.0.1",
    "@edoms/utils": "workspace:^0.0.1",
    "element-plus": "^2.2.25",
    "terser": "^5.14.2",
    "vue": "^3.2.37"
  },
  "peerDependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@types/node": "^15.12.4",
    "@vitejs/plugin-legacy": "^2.3.1",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/test-utils": "^2.0.0",
    "recast": "^0.20.4",
    "rollup": "^2.25.0",
    "sass": "^1.35.1",
    "typescript": "^4.3.4",
    "vite": "^3.1.3",
    "vue-tsc": "^1.0.8"
  }
}
